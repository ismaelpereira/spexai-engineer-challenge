{
   "compilerOptions": {
      "target": "ES2021",
      "module": "commonjs",
      "lib": ["ES2021"],
      "declaration": true,
      "declarationMap": true,
      "outDir": "dist",
      "rootDir": "./",
      "strict": true,
      "composite": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
   },
   "include": ["**/*.ts"],
   "exclude": ["node_modules", "dist"]
}
